<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividad_producto">

  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ADMINISTRACION DE PRODUCTOS"
      android:layout_gravity="center_horizontal"
      />
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Nombre"
      android:layout_gravity="center_horizontal"
      />
  <EditText
      android:id="@+id/etnombre"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_gravity="center_horizontal"
      android:hint="Ingrese su nombre producto"
      android:inputType="textPersonName"
      />
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Referencia"
      android:layout_gravity="center_horizontal"
      />
  <EditText
      android:id="@+id/etreferencia"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_gravity="center_horizontal"
      android:hint="Ingrese referencia"
      android:inputType="textEmailAddress"
      />
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Precio"
      android:layout_gravity="center_horizontal"
      />
  <EditText
      android:id="@+id/etprecio"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_gravity="center_horizontal"
      android:hint="Ingrese el precio"
      android:inputType="textEmailAddress"
      />
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Stock"
      android:layout_gravity="center_horizontal"
      />
  <EditText
      android:id="@+id/etstock"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_gravity="center_horizontal"
      android:hint="Ingrese el stock"
      android:inputType="text"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">>
    <Button
        android:id="@+id/btnadd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Agregar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btnsearch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="Buscar"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">


    <Button
        android:id="@+id/btnupdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="Editar" />

    <Button
        android:id="@+id/btndelete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_gravity="center_horizontal"


        />
  </LinearLayout>

  <Button
      android:id="@+id/btnlist"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Listar"
      android:layout_gravity="center_horizontal"
      />

</LinearLayout>